<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    <title><%= content_for?(:title) ? yield(:title) : 'Arrive Alive' %></title>

    <%= stylesheet_link_tag 'application' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <script>
      (function(i, s, o, g, r, a, m) {
        i['GoogleAnalyticsObject'] = r;
        i[r] = i[r] || function() {
            (i[r].q = i[r].q || []).push(arguments)
          }, i[r].l = 1 * new Date();
        a = s.createElement(o),
          m = s.getElementsByTagName(o)[0];
        a.async = 1;
        a.src = g;
        m.parentNode.insertBefore(a, m)
      })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

      ga('create', 'UA-84676995-1', 'auto');
      ga('send', 'pageview');
    </script>
  </head>

  <body class="<%= current_page?(new_user_session_path) ? 'sign-in-body' : '' %>">
    <% unless current_page?(new_user_session_path) %>
        <%= render 'layouts/navigation' %>
    <% end %>

    <div class="<%= current_page?(new_user_session_path) ? 'sign-in-page row' : 'row' %> main-container">
      <div class="large-12 small-12 columns">
        <% if @title %>
            <h3><%= @title %></h3>
        <% end %>

        <% if notice %>
            <div class="callout primary">
              <%= notice %>
            </div>
        <% end %>

        <% if alert %>
            <div class="callout warning">
              <%= alert %>
            </div>
        <% end %>

        <%= yield %>
      </div>
    </div>
  </body>
</html>
