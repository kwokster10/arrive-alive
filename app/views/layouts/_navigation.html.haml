.title-bar{ data: { hide_for: 'medium', responsive_toggle: 'nav-menu' } }
  .title-bar-title
    =image_tag('logo.png')
  .title-bar-right
    %button.menu-icon{ data: {toggle: ''}, type: 'button' }
#nav-menu.top-bar{class: "#{'admin' if current_user && current_user.admin?}"}
  .top-bar-left
    %ul.menu{ data: { hide_for: 'medium'}}
      %li
        =image_tag('logo.png')
  - if current_user
    .top-bar-right
      %ul.menu.dropdown.vertical.medium-horizontal
        -if current_user.admin?
          %li
            =link_to 'Users', users_path, class: "#{'active' if current_page?(users_path)}"
        %li
          =link_to 'Float Plans', float_plans_path, class: "#{'active' if current_page?(float_plans_path) || current_page?(root_path)}"
        %li
          =link_to 'My Profile', user_path(current_user.id), class: "#{'active' if current_page?(user_path(current_user.id))}"
        %li
          =link_to 'Sign Out', destroy_user_session_path, method: :delete
